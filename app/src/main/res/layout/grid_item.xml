<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profileGridPic"
        android:layout_width="131dp"
        android:layout_height="156dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/gridTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="타이틀"
        app:layout_constraintTop_toBottomOf="@id/profileGridPic"
        app:layout_constraintStart_toStartOf="@id/profileGridPic"
        app:layout_constraintEnd_toEndOf="@id/profileGridPic"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/gridSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="서브타이틀"
        app:layout_constraintTop_toBottomOf="@id/gridTitle"
        app:layout_constraintStart_toStartOf="@id/gridTitle"
        app:layout_constraintEnd_toEndOf="@id/gridTitle"/>


</androidx.constraintlayout.widget.ConstraintLayout>